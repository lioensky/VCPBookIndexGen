# ═══════════════════ LLM 配置 ═══════════════════
LLM_API_KEY=sk-xxxxx
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_MAX_CONTEXT=128000
SUMMARY_MAX_TOKENS=2000
TEMPERATURE=0.3

# ═══════════════════ 分块配置 ═══════════════════
# 每个原文块的最大 token 数（同时用于向量化预留）
CHUNK_SIZE=6000
CHUNK_OVERLAP=200

# ═══════════════════ 总结模式 ═══════════════════
# speed = 并发速读 | deep = 步进精读
SUMMARY_MODE=speed
# 速读并发数
MAX_CONCURRENCY=5
# 精读模式滚动上下文上限（token）
ROLLING_CONTEXT_MAX=4000

# ═══════════════════ 文件配置 ═══════════════════
# auto = 自动检测编码
FILE_ENCODING=auto
OUTPUT_DIR=./output
